{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "scripts",
    "src/setupTests.js",
    "**/*.stories.js",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.spec.js"
  ]
}
